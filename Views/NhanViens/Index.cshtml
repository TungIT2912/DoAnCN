    }

    table.table .avatar {
        border-radius: 50%;
        vertical-align: middle;
        margin-right: 10px;
    }

    .status {
        font-size: 30px;
        margin: 2px 2px 0 0;
        display: inline-block;
        vertical-align: middle;
        line-height: 10px;
    }

    .text-success {
        color: #10c469;
    }

    .text-info {
        color: #62c9e8;
    }

    .text-warning {
        color: #FFC107;
    }

    .text-danger {
        color: #ff5b5b;
    }

    .pagination {
        float: right;
        margin: 0 0 5px;
    }

        .pagination li a {
            border: none;
            font-size: 13px;
            min-width: 30px;
            min-height: 30px;
            color: #999;
            margin: 0 2px;
            line-height: 30px;
            border-radius: 2px !important;
            text-align: center;
            padding: 0 6px;
        }

            .pagination li a:hover {
                color: #666;
            }

        .pagination li.active a, .pagination li.active a.page-link {
            background: #03A9F4;
        }

            .pagination li.active a:hover {
                background: #0397d6;
            }

        .pagination li.disabled i {
            color: #ccc;
        }

        .pagination li i {
            font-size: 16px;
            padding-top: 6px
        }

    .hint-text {
        float: left;
        margin-top: 10px;
        font-size: 13px;
    }

    .button {
        color: #03A9F4;
    }

        .button:hover {
            color: #0275a8;
        }

    .search {
        border: 1.5px solid black;
        text-align: center;
        border-radius: 10px;
        margin-bottom: 7px;
        margin-right: 15px;
        margin-left: 0px;
    }

    tbody {
        color: black;
    }

    .page {
        color: #007bff;
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 3px;
        margin: 0 2px;
        display: flex;
        justify-content: center;
    }

        .page li {
            background-color: #007bff;
            color: white;
            text-decoration: none;
            padding: 5px 10px;
            border: 1px solid #007bff;
            border-radius: 3px;
            margin: 0 2px;
            display: flex;
            justify-content: center;
        }
</style>
