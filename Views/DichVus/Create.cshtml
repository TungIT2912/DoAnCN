@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>

        document.getElementById('createDichVuForm').addEventListener('submit', async (event) => {
            event.preventDefault();


            const data = {
                IdchanDoan: document.getElementById('IdchanDoan').value,
                TenDichVu: document.getElementById('TenDichVu').value,
                DonViTinh: document.getElementById('DonViTinh').value,
                DonGia: document.getElementById('DonGia').value
            };

            console.log('Data to send:', data);

            try {
                const response = await fetch('/Admin/DichVus/api/DichVus', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                });
                console.log('Response Status:', response.status);
                const responseText = await response.text();

                if (response.ok) {
                    alert("Tạo dịch vụ thành công!");
                    window.location.href = '@Url.Action("Index", "DichVus")'; // Ensure this redirects correctly
                } else {
                    let errorMessage = "Đã xảy ra lỗi không xác định.";
                    try {
                        const error = JSON.parse(responseText);
                        errorMessage = error.message;
                    } catch {
                        errorMessage = responseText;
                    }
                    alert("Lỗi khi tạo dịch vụ: " + errorMessage);
                }
            } catch (error) {
                alert("Đã xảy ra lỗi: " + error.message);
            }
        });

    </script>
}
