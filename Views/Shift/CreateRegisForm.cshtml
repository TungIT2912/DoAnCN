@model WebQuanLyNhaKhoa.DTO.RegisFormDTO

@{
    ViewData["Title"] = "Enter Reason";
    Layout = "~/Views/Shared/_LayoutNhanVien.cshtml";
}
<style>

/* Căn giữa toàn bộ form */
.text-center {
    text-align: center;
}

/* Thiết kế cho textbox */
.resize-textbox {
    width: 100%;
    height: 150px;
    padding: 10px;
    font-size: 16px;
    resize: vertical;
    border: 2px solid #ccc;
    border-radius: 5px;
    margin: 10px 0;
    box-sizing: border-box;
    transition: border-color 0.3s ease;
}

/* Khi focus vào textbox */
.resize-textbox:focus {
    border-color: #4CAF50;
    outline: none;
}

/* Thiết kế cho nút gửi */
.submit-btn {
    background-color: #4CAF50;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    margin-top: 15px;
    transition: background-color 0.3s ease;
}

/* Khi hover nút gửi */
.submit-btn:hover {
    background-color: #45a049;
}

/* Thiết kế chung cho form */
.zf-templateWidth {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background-color: #f4f4f9;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

/* Tạo khoảng cách cho nút quay về danh sách */
a {
    display: inline-block;
    margin-bottom: 15px;
}


</style>



<div class="main-container">
    <div class="xs-pd-20-10 pd-ltr-20">
        <div class="row clearfix progress-box">
            <div class="col-lg-12">
                <!-- Nút quay lại danh sách -->
                <a href="@Url.Content("~/Admin/NhanViens")">
                    <button class="rounded-lg px-4 py-2 border-2 border-black-500 text-black-500 hover:bg-blue-600 hover:text-blue-100 duration-300">
                        ← Quay về lại danh sách
                    </button>
                </a>
                <br>
                <hr>
                <div class="zf-templateWidth">
                    <form method="post" action="/Shift/CreateRegisForm">
                        <input type="hidden" name="MaNv" value="@Model.MaNv" />
                        <div class="form-group">
                            <label for="ReasonForChange">Lý do thay đổi:</label>
                            <textarea id="ReasonForChange" name="ReasonForChange" required class="resize-textbox"></textarea>
                        </div>
                        <!-- Nút gửi yêu cầu nằm ngoài textbox -->
                        <button type="submit" class="submit-btn">Gửi yêu cầu</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
