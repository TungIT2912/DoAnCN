<!DOCTYPE html>
<html lang="en" >
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - WebQuanLyNhaKhoa</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/WebQuanLyNhaKhoa.styles.css" asp-append-version="true" />

	<script src="https://cdn.tailwindcss.com"></script>
	<script src="./js/site.js"></script>

</head>

<body style="background-color:#dddddd">
	<header class="navbar-top fixed-top navbar navbar-expand">
		<div class="navbar-collapse justify-content-between">
			<div class="nav-item">
                <button onclick="sideNavAnimation()" style="font-size: 30px; margin-left: 20px;">&#9776;</button>
			</div>
			<div class="navbar-brand">
				LOGO
			</div>
            <div class="nav-item">
                <button onclick="" style="font-size: 20px;">Register</button>
                <button onclick="" style="font-size: 20px;">Login</button>
			</div>
		</div>
	</header>

	<div id="main">
		<div class="row">
            @RenderBody()
		</div>
	</div>

	<nav id="sideNav" class="sideNav col-sm-12 col">
        <a href="#">Trang Chủ</a>
        <a href="#">Quản Lý Nhân Viên</a>
		<a href="#">Quản Lý Bệnh Nhân</a>
	</nav>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
