            border-color: #007BFF;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
        }

        .search-box::placeholder {
            color: #999;
            font-style: italic;
        }

    #loading {
        text-align: center;
        color: #007BFF;
        font-weight: bold;
    }

    #no-data-message-global {
