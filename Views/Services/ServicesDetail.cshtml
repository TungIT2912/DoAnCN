<body>

<div class="page-wrapper">

    <!-- Preloader -->
    <div class="preloader"></div>
   
    </header>
    <!--End Main Header -->

<section class="service-details-section py-5" style="background-color: #f8f9fa;">
    <div class="container">
        <div class="row align-items-center">
            <!-- Image Section -->
            <div class="col-lg-5 text-center">
                <img src="~/images/gallery/1-5.jpg" alt="@Model.Service.TenDichVu" class="img-fluid rounded shadow" style="max-height: 400px; object-fit: cover;">
            </div>

            <!-- Details Section -->
            <div class="col-lg-7">
                <div class="service-details-content p-4 bg-white rounded shadow">
                    <h2 class="text-primary mb-3">@Model.Service.TenDichVu</h2>
                    <div class="mb-4">
                        <h5 class="text-muted">Đơn vị tính:</h5>
                        <p class="fs-5">@Model.Service.DonViTinh</p>
                    </div>
                    <p><strong>Giá:</strong> @Model.Service.DonGia.ToString("N0") VNĐ</p>

                    <div>
                        <h5 class="text-muted">Mô tả:</h5>
                        <p class="fs-5">@Model.Service.Description</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Doctors List Section -->
        <div class="doctors-section mt-5">
            <h3 class="text-primary">Doctors for this service</h3>
            <div class="row">
                @foreach (var doctor in Model.Doctors)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="@Url.Content(doctor.Hinh)" class="card-img-top" alt="@doctor.Ten">
                            <div class="card-body">
                                <h5 class="card-title">@doctor.Ten</h5>
                                <p class="card-text">@doctor.KinhNghiem kinh nghiệm</p>
                                <a href="@Url.Action("DoctorDetails", "Doctor", new { id = doctor.MaNv })" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

    <!--End Team Section -->

   
<script>
    var swiper = new Swiper('.swiper-container', {
        slidesPerView: 10,         // Display 3 items at a time (adjustable)
        spaceBetween: 5,         // Space between each slide
        loop: false,               // Infinite looping
        autoplay: {
            delay: 2500,          // Auto slide every 2.5 seconds
            disableOnInteraction: false, // Keeps autoplay on interaction
        },
        pagination: {
            el: '.swiper-pagination',
            clickable: true,      // Enable pagination controls
        },
        navigation: {
            nextEl: '.swiper-button-next', // Next button
            prevEl: '.swiper-button-prev', // Prev button
        },
        breakpoints: {
            // When the screen size is less than 768px, show 1 item at a time
            768: {
                slidesPerView: 2,
                spaceBetween: 10,
            },
            // When the screen size is between 768px and 1024px, show 2 items at a time
            1024: {
                slidesPerView: 3,
                spaceBetween: 10,
            },
        }
    });
</script>





