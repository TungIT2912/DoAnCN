@model WebQuanLyNhaKhoa.Data.DonThuoc


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="px-5 py-5 h-screen">
    <a asp-action="Index">
        <button class="rounded-lg px-4 py-2 bg-blue-500 text-blue-100 hover:bg-blue-600 duration-300"><i class="fa-solid fa-arrow-left"></i> Trờ lại danh sách </button>
    </a>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Idkham" class="control-label"></label>
                    <select name="id" asp-for="Idkham" class="form-control" asp-items="ViewBag.Idkham"></select>
                </div>
                <div class="form-group">
                    <label asp-for="IddungCu" class="control-label"></label>
                    <select asp-for="IddungCu" class="form-control" asp-items="ViewBag.IddungCu"></select>
                </div>
                <div class="form-group">
                    <label asp-for="SoLuong" class="control-label"></label>
                    <input asp-for="SoLuong" class="form-control" />
                    <span asp-validation-for="SoLuong" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</main>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
