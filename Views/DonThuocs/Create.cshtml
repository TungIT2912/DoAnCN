@model WebQuanLyNhaKhoa.Data.DonThuoc

@{
    ViewData["Title"] = "Create";
}
<style>
    h1 {
        text-align: center;
    }
</style>
<h1>Tạo đơn thuốc cho bệnh nhân</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Idkham" class="control-label"></label>
                <select name="id" asp-for="Idkham" class="form-control" asp-items="ViewBag.Idkham" ></select>
            </div>
            <div class="form-group">
                <label asp-for="IddungCu" class="control-label"></label>
                <select asp-for="IddungCu" class ="form-control" asp-items="ViewBag.IddungCu"></select>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgayLapDt" class="control-label"></label>
                <input asp-for="NgayLapDt" class="form-control" />
                <span asp-validation-for="NgayLapDt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở lại danh sách xem thuốc</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
