            </a>
        </div>
    </nav>
</div>
<div class="mobile-menu-overlay"></div>

<div class="main-container">
    <div class="xs-pd-5-1 pd-ltr-5">
        <!-- Reduced padding -->

        <div class="row clearfix progress-box">
            <div class="col-lg-12">
                <a asp-action="Index" asp-controller="HoaDons">
                    <button class="rounded-lg px-4 py-2 border-2 border-black-500 text-black-500 hover:bg-blue-600 hover:text-blue-100 duration-300">
                        ← Quay về lại danh sách
                    </button>
                </a>

                <div class="flex justify-center items-center h-screen">
                    <div class="container p-4 max-w-[9000px] max-h-[700px] bg-white rounded-xl">
                        <!-- Reduced padding -->
                        <div class="relative">
                            <h1 class="text-[32px] font-bold">Chi tiết hóa đơn</h1>
                            <span class="absolute inline-block w-[70px] h-[4px] bg-gradient-to-r from-blue-500 to-fuchsia-500 rounded-xl"></span>
                        </div>
                        <div class="flex justify-center gap-4 mt-[10px]">
                            <!-- Reduced gap -->
                            <form id="createNhanVienForm" class="flex-wrap flex justify-around items-center" enctype="multipart/form-data">

                                <div class="form-group col-md-6">
                                    <label asp-for="tenBn" class="control-label">Tên bệnh nhân</label>
                                    <span class="form-control"> @Html.DisplayFor(model => model.tenBn)</span>
                                </div>

                                <div class="form-group col-md-6">
                                    <label asp-for="TienThuoc" class="control-label">Tiền thuốc</label>
                                    <span class="form-control"> @Html.DisplayFor(model => model.TienThuoc)</span>
                                </div>

                                <div class="form-group col-md-6">
                                    <label asp-for="TienDieuTri" class="control-label">Tiền điều trị</label>
                                    <span class="form-control"> @Html.DisplayFor(model => model.TienDieuTri)</span>
                                </div>

                                <div class="form-group col-md-6">
                                    <label asp-for="TongTien" class="control-label">Tổng tiền</label>
                                    <span class="form-control">@Html.DisplayFor(model => model.TongTien)</span>
                                </div>

                                <div class="form-group col-md-12">
                                    <label asp-for="NgayLap" class="control-label">Ngày lập</label>
                                    <span class="form-control">@String.Format("{0:dd/MM/yyyy}", Model.NgayLap)</span>
                                </div>

                                <div class="form-group col-md-12"> <label class="control-label font-weight-bold">Chi tiết đơn thuốc</label> @if (Model.DonThuocs.Any())
                                    {
                                        <div class="table-responsive"> <table class="table table-bordered table-striped"> <thead class="thead-dark"> <tr> <th>Tên thuốc</th> <th>Thành giá</th> <th>Tổng tiền</th> <th>Ngày lập</th> </tr> </thead> <tbody> @foreach (var donThuoc in Model.DonThuocs)
                                                    {
                                                        <tr> <td>@donThuoc.tenThuoc</td> <td>@donThuoc.ThanhGia</td> <td>@donThuoc.TongTien</td> <td>@donThuoc.NgayLapDt?.ToString("dd/MM/yyyy")</td> </tr>
                                                    } </tbody> </table> </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Không có thông tin về đơn thuốc.</p>
                                    } </div> <div class="form-group col-md-12"> <label class="control-label font-weight-bold">Chi tiết điều trị</label> @if (Model.DieuTris.Any())
                                    {
                                        <div class="table-responsive"> <table class="table table-bordered table-striped"> <thead class="thead-dark"> <tr> <th>Tên điều trị</th> <th>ThanhTien</th> </tr> </thead> <tbody> @foreach (var dieuTri in Model.DieuTris)
                                                    {
                                                        <tr> <td>@dieuTri.tenDieuTri</td> <td>@dieuTri.ThanhTien</td> </tr>
                                                    } </tbody> </table> </div>
                                    }
                                    else
                                    {
                                        <p class="text-muted">Không có thông tin về điều trị.</p>
                                    } </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
