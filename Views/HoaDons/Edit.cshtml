@model WebQuanLyNhaKhoa.Data.HoaDon

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h1 {
        text-align: center;
    }
</style>
<h1>Thanh toán cho bệnh nhân</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input  type="hidden" asp-for="IdhoaDon" />
            <div class="form-group">
                <label asp-for="PhuongThucThanhToan" class="control-label"></label>
                <input asp-for="PhuongThucThanhToan" class="form-control" />
                <span asp-validation-for="PhuongThucThanhToan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailBn" class="control-label"></label>
                <input type="email" asp-for="EmailBn" class="form-control" />
                <span asp-validation-for="EmailBn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thanh toán" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở lại danh sách hóa đơn</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
