@model WebQuanLyNhaKhoa.Data.HoaDon

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="px-5 py-5 h-screen">
    <h1 class="uppercase text-4xl font-semibold tracking-[.4rem] text-center">Thanh toán cho bệnh nhân</h1>
    <div class="my-5">
        <a asp-action = "Index" class="rounded-lg px-4 py-2 bg-green-300 hover:bg-green-400 duration-300"><i class="fa-solid fa-arrow-left"></i> Quay lại danh sách hóa đơn</a>
    </div>
    <div class="row my-5">
        <div class="col-md-4">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdhoaDon" />
                <div class="form-group">
                    <label asp-for="PhuongThucThanhToan" class="control-label">Phương thức thanh toán</label>
                    <input asp-for="PhuongThucThanhToan" class="form-control" />
                    <span asp-validation-for="PhuongThucThanhToan" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmailBn" class="control-label">Email bệnh nhân</label>
                    <input type="email" asp-for="EmailBn" class="form-control" />
                    <span asp-validation-for="EmailBn" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Thanh toán" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</main>


