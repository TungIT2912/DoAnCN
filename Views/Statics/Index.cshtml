@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.4.1/chart.min.js"></script>

    <script>
        let chart;  // Global reference to the chart instance

        document.getElementById('yearForm').addEventListener('submit', async function (event) {
            event.preventDefault();
            const year = document.getElementById('inputYear').value;

            try {
                const response = await fetch(`Statics/api/Statics/${year}`);
                if (!response.ok) throw new Error("Failed to fetch data");
                const result = await response.json(); // Parse the JSON response
                console.log("API response:", result);

                // Check if RevenueData exists and is an array
                console.log("Is RevenueData an array?", Array.isArray(result.revenueData));
                console.log("RevenueData contents:", result.revenueData);

                if (!Array.isArray(result.revenueData)) {
                    throw new Error("Expected 'RevenueData' to be an array");
                }

                const revenueData = result.revenueData;
                const chartData = revenueData.map(item => item.value);  
                const chartLabels = revenueData.map(item => item.label);
                const ctx = document.getElementById('myChart');
                if (!ctx) {
                    console.error("Canvas element 'myChart' not found.");
                    return;
                }

                if (chart) {
                    chart.destroy();
                }

                chart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: chartLabels,
                        datasets: [{
                            label: 'Doanh thu',
                            data: chartData,
                            backgroundColor: 'rgba(54, 162, 235, 0.2)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function (value) {
                                        return value + ' triệu';
                                    }
                                }
                            }
                        }
                    }
                });
            } catch (error) {
                console.error("Error fetching data:", error);
                alert("Không thể tải dữ liệu. Vui lòng thử lại.");
            }
        });
    </script>

