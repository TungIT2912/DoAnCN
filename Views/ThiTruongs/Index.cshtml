<script>
    async function fetchThiTruongs() {
        try {
            const response = await fetch('ThiTruongs/api/ThiTruongs');
            if (!response.ok) {
                console.error('Response status:', response.status); // Log status
                throw new Error('Network response was not ok');
            }
            const khoes = await response.json();

            const tableBody = document.getElementById('thiTruongTable').getElementsByTagName('tbody')[0];
            tableBody.innerHTML = '';
            khoes.forEach(nv => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${nv.tenSanPham}</td>
                    <td>${nv.loai}</td>
                    <td>${nv.donViTinh}</td>
                    <td>${nv.donGia}</td>
                `;
                tableBody.appendChild(row);
            });
        } catch (error) {
            console.error('Fetch error:', error);
            alert('Không thể tải dữ liệu. Vui lòng thử lại.');
        }
    }

    // Call the function on page load
    document.addEventListener('DOMContentLoaded', fetchThiTruongs);
</script>