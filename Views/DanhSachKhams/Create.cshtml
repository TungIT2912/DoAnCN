@model WebQuanLyNhaKhoa.Data.DanhSachKham
@* @using Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@using Microsoft.AspNetCore.Identity
@{
    Layout = "_LayoutEmployee";
} *@
@{
    ViewData["Title"] = "Create";
}
<style>
    h1{
        text-align:center;
    }
</style>
<h1>Tạo danh sách</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Idkham" class="control-label"></label>
                <input asp-for="Idkham" class="form-control" />
                <span asp-validation-for="Idkham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdbenhNhan" class="control-label"></label>
                <select asp-for="IdbenhNhan" class ="form-control" asp-items="ViewBag.IdbenhNhan"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaNv" class="control-label"></label>
                <select asp-for="MaNv" class ="form-control" asp-items="ViewBag.MaNv"></select>
            </div>
            <div class="form-group">
                <label asp-for="NgayKham" class="control-label"></label>
                <input asp-for="NgayKham" class="form-control" />
                <span asp-validation-for="NgayKham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở lại danh sách khám</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
